# region difftastic differ
[diff]
        tool = difftastic
	external = difft
	guitool = difftastic.gui

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
[difftool "difftastic.gui"]
        cmd = difft "$LOCAL" "$REMOTE"
[pager]
        difftool = true
# endregion difftastic differ

# region kitty differ
; [diff]
    ; tool = kitty
    ; guitool = kitty.gui
; [difftool]
;     prompt = false
;     trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
# endregion kitty differ

[push]
	autoSetupRemote = true
